@model Odin.ViewModels.Orders.Transferee.HousingViewModel

<div class="container-fluid" id="housing" data-order-id="@Model.Id">
    <div class="row" id="housingSummaryMap">

        <div class="col-md-8 col-md-push-4 mapWrapper">
            <div id="map" data-lat="@Model.Latitude" data-lng="@Model.Longitude"></div>
        </div>
        <div class="col-md-4 col-md-pull-8">
            <h1 id="housingsectionTitle" class="sectionTitle">Housing Summary</h1>
            <ul class="row sectionList">
                <li class="col-md-6">
                    <label>@Html.DisplayNameFor(model => model.HousingBudget)</label>
                    <p id="HousingBudget">@Html.DisplayFor(model => model.HousingBudget)</p>
                </li>
                <li class="col-md-6">
                    <label>@Html.DisplayNameFor(model => model.NumberOfBedrooms)</label>
                    <p id="NumberOfBedrooms">@Html.DisplayFor(model => model.NumberOfBedrooms)</p>
                </li>
                <li class="col-md-6">
                    <label>@Html.DisplayNameFor(model => model.PetsCount)</label>
                    <p id="PetsCount">@Html.DisplayFor(model => model.PetsCount) </p>
                </li>
                <li class="col-md-6">
                    <label>@Html.DisplayNameFor(model => model.TransportationTypeName)</label>
                    <p>@Html.DisplayFor(model => model.TransportationTypeName)</p>
                </li>
                <li class="col-md-6">
                    <label>@Html.DisplayNameFor(model => model.HousingTypeName)</label>
                    <p>@Html.DisplayFor(model => model.HousingTypeName)</p>
                </li>
                <li class="col-md-6">
                    <label>@Html.DisplayNameFor(model => model.NumberOfBathroomsName)</label>
                    <p>@Html.DisplayFor(model => model.NumberOfBathroomsName)</p>
                </li>
                <li class="col-md-6">
                    <label>@Html.DisplayNameFor(model => model.MaxCommute)</label>
                    <p>@Html.DisplayFor(model => model.MaxCommute)</p>
                </li>
                <li class="col-md-6">
                    <label>@Html.DisplayNameFor(model => model.SpouseAndKids)</label>
                    <p>@Html.DisplayFor(model => model.SpouseAndKids)</p>
                </li>
            </ul>
        </div>
    </div>

    <div class="row controlsContainer" id="propertiesControls">

                        
        <form class="col-md-6" id="housingFilter">
            <label class="housingFilter__title">Filter:</label>
            <label id="allfilter">
                @Html.RadioButton("Filter", "", true)
                <span>All</span>
            </label>
            <label id="newfilter">
                @Html.RadioButton("Filter", "new", false)
                <span>New</span>
            </label>
            <label id="likedfilter">
                @Html.RadioButton("Filter", "liked", false)
                <span>Liked</span>
            </label>
            <label id="dislikedfilter">
                @Html.RadioButton("Filter", "disliked", false)
                <span>Disliked</span>
            </label>
        </form>
                        
        <div class="col-md-6">
            <span  class="btnAndLabel" id="exportPDF"  data-toggle="modal" data-target="#pdfChoicesModal">Export to PDF <img src="~/Content/Images/export_pdf_icon.png" /></span>
            <span  class="btnAndLabel" id="addProperty" data-toggle="modal" data-target="#addPropertyModal">Add Property <img src="~/Content/Images/btn_add_home.png" /></span>
        </div>
    </div>

    <div class="row" id="propertiesContainer">
        @Html.Partial("~/Views/Orders/Partials/_HousingProperties.cshtml", Model.Properties)
    </div>

    <div id="chat" style="display: none;">
