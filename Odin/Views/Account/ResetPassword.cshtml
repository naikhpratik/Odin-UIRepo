@model Odin.ViewModels.Authentication.ResetPasswordViewModel
@{
    ViewBag.Title = "Reset";
    Layout = "~/Views/Shared/_ForgotPassword.cshtml";
}

<div class="row">
    <div class="col-lg-6 col-lg-offset-3 col-md-8 col-md-offset-2">
        @using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()

            <div id="caption">
                <span>@ViewBag.Title your</span><span id="pw"> Password</span>
            </div>

            @Html.ValidationSummary("", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.Code)
            @Html.HiddenFor(model => model.UserId, (string)ViewBag.UserId)

            <div id="group-blk">
                <div class="form-group">
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.Password, new { @class = "form-control", @type = "password" })
                        @Html.LabelFor(m => m.Password, new { @class = "col-md-10 control-label" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.ConfirmPassword, new { @class = "form-control", @type = "password" })
                        @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-10 control-label" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-10">
                        <input type="submit" value="Reset" class="btn btn-default" />
                    </div>
                    <br />
                </div>
            </div>
        }
        <div class="centered_logo">
            @Html.Partial("~/Views/Shared/Partials/_logo.cshtml")
        </div>
    </div>
</div>
    @Styles.Render("~/Styling/forgotpassword")    

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
